<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mk.coleccion.controlador.APP.DetalleSerieController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="5.0">
        <Label fx:id="lblSerieName" text="Nombre de la Serie"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <Label fx:id="lblAutorName" text="Autor: "
               style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
        <!-- NUEVO: Label para descripción -->
        <Label fx:id="lblDescripcionSerie" text="Descripción de la serie..."
               wrapText="true" maxWidth="900.0"
               style="-fx-font-size: 13px; -fx-text-fill: #555555; -fx-padding: 10 0 0 0;"/>
    </VBox>

    <Separator/>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Mangas de esta Serie:"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnAnadirManga" text="+ Añadir Manga"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
        <Button fx:id="btnEliminarManga" text="Eliminar Manga"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
    </HBox>

    <ScrollPane fx:id="scrollMangas" VBox.vgrow="ALWAYS"
                style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;"
                fitToWidth="true">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </ScrollPane>

    <Label text="Seleccione un manga haciendo clic en él. Haga doble clic para editarlo, o use los botones de arriba."
           style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-font-style: italic;"
           wrapText="true"/>
</VBox>