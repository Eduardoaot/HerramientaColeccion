<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mk.coleccion.controlador.APP.IndexAPP"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
    </padding>

    <Label text="Sistema de Gestión de Colección de Mangas"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <VBox spacing="15.0" alignment="CENTER">
        <Button fx:id="btnUsuario" text="Gestión de Usuarios"
                prefWidth="250.0" prefHeight="50.0"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>

        <Button fx:id="btnManga" text="Gestión de Series y Mangas"
                prefWidth="250.0" prefHeight="50.0"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>

        <Button fx:id="btnAutomatizacion" text="Automatización"
                prefWidth="250.0" prefHeight="50.0"
                style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
    </VBox>
</VBox>