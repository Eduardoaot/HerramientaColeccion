<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mk.coleccion.controlador.APP.UsuarioController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Gestión de Usuarios"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Buscar:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtBuscar" promptText="Buscar por nombre, email o usuario..."
                   prefWidth="300.0"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnActualizar" text="Actualizar Usuario"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
        <Button fx:id="btnEliminar" text="Eliminar Usuario"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
    </HBox>

    <TableView fx:id="tableUsuarios" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" editable="false"/>
            <TableColumn fx:id="colUserName" text="Usuario" prefWidth="120.0"/>
            <TableColumn fx:id="colFullName" text="Nombre Completo" prefWidth="180.0"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0"/>
            <TableColumn fx:id="colPassword" text="Contraseña" prefWidth="120.0"/>
            <TableColumn fx:id="colMeta" text="Meta" prefWidth="150.0"/>
        </columns>
    </TableView>

    <Label text="Haga doble clic en una celda para editarla. Luego seleccione la fila y haga clic en 'Actualizar Usuario'."
           style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-font-style: italic;"
           wrapText="true"/>
</VBox>