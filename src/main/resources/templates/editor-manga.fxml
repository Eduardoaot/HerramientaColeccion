<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mk.coleccion.controlador.APP.EditorMangaController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Editor de Manga"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <Separator/>

    <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Número de Volumen:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtVolumen" promptText="Ej: 1, 2, 3..."
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtPrecio" promptText="Ej: 15.99"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-size: 14px;" GridPane.valignment="TOP">
            <padding>
                <Insets top="5.0"/>
            </padding>
        </Label>
        <TextArea fx:id="txtDescripcion" promptText="Descripción del manga..."
                  prefHeight="100.0" wrapText="true"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Imagen:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-size: 14px;" GridPane.valignment="TOP">
            <padding>
                <Insets top="5.0"/>
            </padding>
        </Label>
        <VBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="btnSeleccionarImagen" text="Seleccionar Imagen"
                        style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
                <Label fx:id="lblNombreImagen" text="Ninguna imagen seleccionada"
                       style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
            </HBox>

            <VBox alignment="CENTER"
                  style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: white;">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <ImageView fx:id="imgManga" fitHeight="300.0" fitWidth="200.0"
                           preserveRatio="true"/>
            </VBox>
        </VBox>
    </GridPane>

    <Separator/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="btnGuardar" text="Guardar" prefWidth="120.0"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button fx:id="btnCancelar" text="Cancelar" prefWidth="120.0"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px;"/>
    </HBox>
</VBox>