<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mk.coleccion.controlador.APP.EditorSerieController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Editor de Serie"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <Separator/>

    <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="140.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Nombre de la Serie:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtNombreSerie" promptText="Ej: One Piece"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtAutor" promptText="Ej: Eiichiro Oda"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Total de Volúmenes:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtTotalVolumenes" promptText="Ej: 100 (dejar vacío si es desconocido)"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-size: 14px;" GridPane.valignment="TOP">
            <padding>
                <Insets top="5.0"/>
            </padding>
        </Label>
        <TextArea fx:id="txtDescripcion" promptText="Descripción de la serie..."
                  prefHeight="150.0" wrapText="true"
                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <Separator/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="btnGuardar" text="Guardar" prefWidth="120.0"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button fx:id="btnCancelar" text="Cancelar" prefWidth="120.0"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px;"/>
    </HBox>
</VBox>
