<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mk.coleccion.controlador.APP.SerieController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Gestión de Series y Mangas"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Buscar:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtBuscarSerie" promptText="Buscar por nombre de serie o autor..."
                   prefWidth="350.0"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnVerDetalles" text="Ver Detalles de Serie"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
    </HBox>

    <TableView fx:id="tableSeries" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdSerie" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="colSerieName" text="Nombre de la Serie" prefWidth="350.0"/>
            <TableColumn fx:id="colAuthorName" text="Autor" prefWidth="250.0"/>
            <TableColumn fx:id="colTotales" text="Total Volúmenes" prefWidth="130.0"/>
        </columns>
    </TableView>

    <Label text="Seleccione una serie y haga clic en 'Ver Detalles' o haga doble clic en una fila."
           style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-font-style: italic;"
           wrapText="true"/>
</VBox>