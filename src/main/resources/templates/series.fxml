<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mk.coleccion.controlador.APP.SerieController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Gestión de Series y Mangas"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Buscar:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtBuscarSerie" promptText="Buscar por nombre de serie, autor o descripción..."
                   prefWidth="300.0"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnAgregarSerie" text="+ Agregar Serie"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
        <Button fx:id="btnEditarSerie" text="Editar Serie"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
        <Button fx:id="btnEliminarSerie" text="Eliminar Serie"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
        <Button fx:id="btnVerDetalles" text="Ver Detalles"
                style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-padding: 8 15 8 15; -fx-cursor: hand;"/>
    </HBox>

    <TableView fx:id="tableSeries" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdSerie" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="colSerieName" text="Nombre de la Serie" prefWidth="200.0"/>
            <TableColumn fx:id="colAuthorName" text="Autor" prefWidth="150.0"/>
            <TableColumn fx:id="colTotales" text="Total Volúmenes" prefWidth="110.0"/>
            <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="400.0"/>
        </columns>
    </TableView>

    <Label text="Seleccione una serie y use los botones superiores, o haga doble clic en una fila para ver más información."
           style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-font-style: italic;"
           wrapText="true"/>
</VBox>
